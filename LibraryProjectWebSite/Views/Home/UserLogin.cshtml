@model LibraryProjectWebSite.Models.LibraryViewModel
@if (ViewBag.Role == "user" || ViewBag.isLoggedIn == false)
{
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
else if (ViewBag.Role == "officer")
{
    Layout = "~/Views/Shared/_LayoutOfficer.cshtml";
}

<div style="padding-top: 8rem!important;padding-bottom: 8rem!important;" class="pt-32pt pt-sm-64pt pb-32pt">
    <div class="container page__container">



        @using (Html.BeginForm("UserLogin", "Home", FormMethod.Post))
        {
            <div style="margin-left:275px;" class="form-group">

                <label class="form-label"
                       for="email">Email:</label>
                @Html.TextBoxFor(m => m.User.Email, new { @class = "form-control", @style = "width:58%", required = "required", @placeholder = "Your email address" })

                <label class="form-label"
                       for="password">Password:</label>
                @Html.PasswordFor(m => m.User.Password, new { @class = "form-control", @style = "width:58%", required = "required", @placeholder = "Your password" })
                <p>
                    <a href="https://localhost:44361/Home/UserResetPassword"
                       style="line-height:2.5;">Forgot your password?</a>
                </p>

            </div>
            <input style="margin-left:360px;width:21%" class="btn btn-primary" type="submit" value="Login">
        }


        <div class="text-center">
            <h3 style="margin-top: 20px">Are You An Officer?</h3>
            <button class="btn btn-primary"><a style="color: white" href="https://localhost:44361/Home/OfficerLogin">Officer Login</a></button>
        </div>
    </div>
</div>
@if (Model.alertMessage != null)
{
    <script type="text/javascript">

        window.onload = function () {
            alert("@Model.alertMessage");
            };
    </script>
}