@model LibraryProjectWebSite.Models.LibraryViewModel
@{
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div style="padding-top: 8rem;" class="page-section container page__container">
    <div class="col-lg-10 p-0 mx-auto">
        <div class="row">
            <div class="col-md-6 mb-24pt mb-md-0">
                @using (Html.BeginForm("OfficerRegister", "Home", FormMethod.Post))
                {
                    <div class="form-group">
                        <label class="form-label"
                               for="name">Your first name:</label>
                        <input id="name"
                               name="libraryViewModel.Officer.Name"
                               type="text"
                               class="form-control"
                               placeholder="Your first name ...">
                    </div>
                    <div class="form-group">
                        <label class="form-label"
                               for="surname">Your last name:</label>
                        <input id="surname"
                               name="libraryViewModel.Officer.Surname"
                               type="text"
                               class="form-control"
                               placeholder="Your last name ...">
                    </div>

                    <div class="form-group">
                        <label class="form-label" for="library">Your Library:</label>
                        <br>
                        <select style="height: 30px;width: 370px;" id="library" name="libraryViewModel.Officer.LibraryId">
                            <option style="color: #9b9d9c" value="Please select">Your Library that you are currently working in ...</option>
                            @foreach (var library in Model.Libraries)
                            {
                                <option value="@library.Id">@library.Name</option>
                            }


                        </select>
                    </div>


                    <div class="form-group">
                        <label class="form-label"
                               for="email">Your email:</label>
                        <input id="email"
                               name="libraryViewModel.Officer.Email"
                               type="email"
                               class="form-control"
                               placeholder="Your email address ...">
                    </div>
                    <div class="form-group mb-24pt">
                        <label class="form-label"
                               for="password">Password:</label>
                        <input id="password"
                               name="libraryViewModel.Officer.Password"
                               type="password"
                               class="form-control"
                               placeholder="Your password ...">
                    </div>
                    <div class="col-md-6 mb-24pt mb-md-0">

                        <div class="form-group">
                            <label class="form-label"
                                   for="name">Identity Number:</label>
                            <input id="name"
                                   name="libraryViewModel.Officer.IdentityNumber"
                                   type="text"
                                   class="form-control"
                                   placeholder="Your identity number ...">
                        </div>
                        <div class="form-group">
                            <label class="form-label"
                                   for="name">Date of birth:</label>
                            <input type="date"
                                   id="dateofbirth"
                                   name="libraryViewModel.Officer.DateOfBirth"
                                   value=@DateTime.Today.ToString("dd/MM/yyyy")>
                        </div>
                        <div class="form-group">
                            <label class="form-label"
                                   for="email">Phone Number:</label>
                            <input id="email"
                                   name="libraryViewModel.Officer.PhoneNumber"
                                   type="number"
                                   class="form-control"
                                   placeholder="Your phone number ...">
                        </div>

                    </div>
                    <button style="margin-left: 335px!important;" class="btn btn-primary">Create account</button>
                }

            </div>

        </div>
    </div>
</div>
<div class="page-separator justify-content-center m-0">
    <div class="page-separator__text">or sign as user</div>
</div>
<div class="page-section text-center">
    <div style="margin-top: -85px;" class="container page__container">
        <a href="signup.html"
           class="btn btn-secondary btn-block-xs">user SIGN UP</a>
    </div>
</div>