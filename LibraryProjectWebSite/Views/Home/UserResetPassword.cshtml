@model LibraryProjectWebSite.Models.LibraryViewModel
@{
    Layout = Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="page-section pb-0">
    <div class="container page__container d-flex flex-column flex-sm-row align-items-sm-center">
        <div class="flex">
            <h1 class="h2 mb-0">Reset Password</h1>
            <p class="text-breadcrumb">Account Management</p>
        </div>
        <p class="d-sm-none"></p>
    </div>
</div>

<div style="padding-top: 2rem;" class="page-section">
    <div class="container page__container">
        <div class="page-separator">
            <div class="page-separator__text">Reset Password</div>
        </div>
        <div class="col-sm-6 p-0">
            <div class="alert alert-soft-warning">
                <div class="d-flex flex-wrap">
                    <div class="mr-8pt">
                        <i class="material-icons">check_circle</i>
                    </div>
                    <div class="flex"
                         style="min-width: 180px">
                        <small class="text-100">
                            An email with password reset instructions will send to your email address, if it exists on our system.
                        </small>
                    </div>
                </div>
            </div>
            @using (Html.BeginForm("UserResetPasswordSendEmail", "Home", FormMethod.Post))
            {
                <div class="form-group">
                    <label class="form-label">Email:</label>
                    <input type="text"
                           name="email"
                           class="form-control"
                           placeholder="Your email address ...">
                    <small class="form-text text-muted">We will email you with info on how to reset your password.</small>
                </div>
                <button type="submit" class="btn btn-primary">Reset</button>
            }
            @using (Html.BeginForm("UserResetPassword", "Home", FormMethod.Post, new { @style = "padding-top:45px" }))
            {
                <label style="font-size:14px" for="resetString"> PLEASE CHECK YOUR E-MAIL FOR CONFIRMATION CODE</label>
                <input style="width: 100%; height: 40px; font-size: 16px; " name="resetString" type="text" placeholder="Confirmation Code" />
                <p></p>
                <label style="font-size:14px" for="resetString">NEW PASSWORD</label>
                <input style="width: 100%; height: 40px; font-size: 16px; " name="password1" type="password" placeholder="New Password" />
                <p></p>
                <label style="font-size:14px" for="resetString">CONFIRM PASSWORD</label>
                <input style="width: 100%; height: 40px; font-size: 16px; " name="password2" type="password" placeholder="Confirm Password" />
                <button style=" margin-top: 25px; width: 17%; height: 40px; font-size: 16" type="submit" class="btn btn-primary">Send</button>
            }

        </div>
    </div>
</div>
@if (Model.alertMessage != null)
{
    <script type="text/javascript">

        window.onload = function () {
            alert("@Model.alertMessage");
            };
    </script>
}